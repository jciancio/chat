<%= form_for(@task) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :points %><br>
    <%= f.number_field :points %>
  </div>

  <div class="submit">
    <%= f.submit 'Create Task' %>
  </div>
<% end %>
